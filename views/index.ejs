
  
<%- include('partials/header') %>
<%- include('partials/sidebar') %>

  <main>
    <div id="profile-container" style="display: none;">
      <div id="profile-content"></div>
    </div>

    <!-- Login Container -->
    <div id="login-container">
      <h2>Login</h2>
      <form id="login-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" required />
        </div>
        <button type="submit">Login</button>
      </form>
      <p>Don't have an account? <a href="#" id="register-toggle">Register</a></p>
    </div>

   
    <!-- Register Container -->
    <div id="register-container" style="display: none;">
      <h2>Register</h2>
      <form id="register-form">
        <div class="form-group">
          <label for="reg-name">Name</label>
          <input type="text" id="reg-name" required />
        </div>
        <div class="form-group">
          <label for="reg-email">Email</label>
          <input type="email" id="reg-email" required />
        </div>
        <div class="form-group">
          <label for="reg-password">Password</label>
          <input type="password" id="reg-password" required />
        </div>
        <div class="form-group">
          <label for="reg-role">Role</label>
          <select id="reg-role" required>
            <option value="coach">Coach</option>
            <option value="athlete">Athlete</option>
            <option value="medical">Medical</option>
            <option value="manager">Manager</option>
          </select>
        </div>
        <button type="submit">Register</button>
      </form>
      <p>Already have an account? <a href="#" id="login-toggle">Login</a></p>
    </div>




    <!-- Dashboard (FIXED!) -->
    <div id="dashboard-container" style="display: none;"></div>
  
    <!-- Training Section -->
    <div id="training-container" style="display: none;">
      <h2>Training Sessions</h2>
      <button id="add-training-btn">Add New Training</button>
       <div id="add-training-form" style="display: none; margin-top: 20px;">
    <h3>Add Training</h3>
    <form id="training-form">
      <input type="text" id="training-title" placeholder="Title" required />
      <input type="text" id="training-athlete" placeholder="Athlete Name" required />
      <input type="text" id="training-coach" placeholder="Coach Name" required />
      <input type="date" id="training-date" required />
      <div class="form-group">
        <label for="training-status">Status</label>
        <select id="training-status" required>
          <option value="Upcoming">Upcoming</option>
          <option value="Completed">Completed</option>
          <option value="Cancelled">Cancelled</option>
        </select>
      </div>

      <button type="submit">Save Training</button>
    </form>
    </div>
        <div id="training-list"></div>
    </div>

    <!-- Competitions Section -->
    <div id="competitions-container" style="display: none;">
      <h2>Competitions</h2>
      <button id="add-competition-btn">Add New Competition</button>

      <!-- Competition Form -->
      <div id="add-competition-form" style="display: none; margin-top: 20px;">
        <h3>Add Competition</h3>
        <form id="competition-form">
          

          <div class="form-group">
            <label for="comp-name">Name</label>
            <input type="text" id="comp-name" required />
          </div>

          <div class="form-group">
            <label for="comp-athletename">Athlete Name</label>
            <input type="text" id="comp-athletename" required />
          </div>

          <div class="form-group">
            <label for="comp-location">Location</label>
            <input type="text" id="comp-location" required />
          </div>

          <div class="form-group">
            <label for="comp-date">Date</label>
            <input type="date" id="comp-date" required />
          </div>

          <div class="form-group">
            <label for="comp-status">Status</label>
            <select id="comp-status" required>
              <option value="Upcoming">Upcoming</option>
              <option value="Completed">Completed</option>
              <option value="Missed">Missed</option>
            </select>
          </div>

          <div class="form-group">
            <label for="comp-type">Type</label>
            <select id="comp-type" required>
              <option value="">Select Type</option>
              <option value="Friendly">Friendly</option>
              <option value="Tournament">Tournament</option>
              <option value="League">League</option>
              <option value="Practice">Practice</option>
              <option value="Qualifier">Qualifier</option>
            </select>
          </div>


          <button type="submit">Save Competition</button>
        </form>
      </div>

      <!-- List of Competitions -->
      <div id="competitions-list" style="margin-top: 20px;"></div>
    </div>

    <!-- Health Records Section -->
    <div id="health-container" style="display: none;">
      <h2>Health Records</h2>
      <button id="add-health-btn">Add New Health Record</button>
      <div id="add-health-form" style="display: none; margin-top: 20px;">
        <h3>Add Health Record</h3>
        <form id="health-form">
          <input type="date" id="health-date" required />
          <input type="text" id="health-athlete" placeholder="Athlete Name" required />
          <div class="form-group">
          <label for="health-type">Type</label>
            <select id="health-type" required>
              <option value="Checkup">Checkup</option>
              <option value="Injury">Injury</option>
              <option value="Nutrition">Nutrition</option>
            </select>
          </div>

          <textarea id="health-notes" placeholder="Notes" required></textarea>
          <button type="submit">Save Health Record</button>
        </form>
      </div>
      <div id="health-list"></div>
    </div>

    <!-- Teams Section -->
   
    <div id="teams-container" style="display: none;">
      <h2>Teams</h2>
      <button id="add-team-btn">Add New Team</button>

      <div id="add-team-form" style="display: none; margin-top: 20px;">
        <h3 id="team-form-heading">Add Team</h3>
        <form id="team-form">
          <div class="form-group">
            <label for="team-name">Team Name</label>
            <input type="text" id="team-name" required />
          </div>
          <div class="form-group">
            <label for="team-sport">Sport</label>
            <input type="text" id="team-sport" required />
          </div>
          <div class="form-group">
            <label for="team-athletes">Athletes (comma-separated)</label>
            <input type="text" id="team-athletes" required />
          </div>
          <div class="form-group">
            <label for="team-coaches">Coaches (comma-separated)</label>
            <input type="text" id="team-coaches" required />
          </div>
          <div class="form-group">
            <label for="team-description">Description</label>
            <input type="text" id="team-description" />
          </div>
          <button id="save-team-btn" type="submit">Save Team</button>
        </form>
      </div>

      <div id="teams-list" style="margin-top: 20px;"></div>
    </div>
  
    <div id="connections-section" style="display: none; background: #e6f3ff; padding: 15px;">
      <h2>Your Connections</h2>
      <div id="connection-requests"></div>
      <div id="approved-connections"></div>
      <div id="user-list"></div>
    </div>

  </main>


 <%- include('partials/footer') %>
